@using Razor.Models
@model Product[]
    @{ 
        ViewBag.Taitle = "Demo Array";
    }

@if (Model.Length > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Property</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>$@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <h2 class="text-danger">No product data</h2>
}
